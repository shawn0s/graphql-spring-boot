
type Query {
    getBook(id: String!): Book
    getAllBooks: [Book]
}
scalar DateTime
scalar Date
#scalar BigDecimal

type Mutation {
    createBook(input: BookInput!): Book
}

type Book{
    id:ID!
    name: String
    description: String
    author: Author
    createdAt: String
}

type Author{
    id:ID!
    firstName: String
    lastName: String
}

input BookInput{
    name: String
    description: String
    authorId: String
}